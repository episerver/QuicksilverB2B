<div class="container-fluid">
    <div class="row myPage">
        <aside class="col-xs-12 col-sm-3 sidebar-nav">
            <h2 class="h3">Account</h2>
            <ul class="nav nav-stacked" role="tablist">
                <li role="presentation" class="is-active">
                    <a href="/en/my-pages/profile/" aria-expanded="True">Profile</a>
                </li>
                <li role="presentation" class="">
                    <a href="/en/my-pages/address-book/" aria-expanded="False">Address book</a>
                </li>
                <li role="presentation" class="">
                    <a href="/en/my-pages/order-history/" aria-expanded="False">Order history</a>
                </li>
                <li role="presentation" class="">
                    <a href="/en/my-pages/wish-list/" aria-expanded="False">Wish list</a>
                </li>
                <li role="presentation" class="">
                    <a href="/en/my-pages/reset-password/" aria-expanded="False">Reset password</a>
                </li>
            </ul>
            <h2 class="h3">Organization</h2>
            <ul class="nav nav-stacked" role="tablist">
                <li role="presentation">
                    <a href="@Url.Action("Index","OrganizationPage")" class="" aria-expanded="">[Organization]</a>
                    <ul class="nav nav-stacked" role="tablist">
                        <li><a href="@Url.Action("Index","SubOrganizationPage")" class="" aria-expanded="">[Sub-organization A]</a></li>
                        <li><a href="@Url.Action("Index","SubOrganizationPage")" class="" aria-expanded="">[Sub-organization B]</a></li>
                    </ul>
                </li>
            </ul>
        </aside>
        <main class="col-xs-12 col-sm-9">
            <div class="spacer-left-l">
                <div class="btn-group spacer-bottom-l" role="group" aria-label="">
                    <a href="#" class="btn btn-default">Overview</a>
                    <a href="#" class="btn btn-default">Users</a>
                    <a href="#" class="btn btn-default">Orders</a>
                    <a href="#" class="btn btn-default">Order Pad</a>
                    <a href="#" class="btn btn-default active">Budgeting</a>
                </div>
                <section class="spacer-bottom-l">
                    <div class="section-title spacer-bottom-m">
                        <h2 class="h3">Current organization budget</h2>
                        <a href="@Url.Action("EditBudget","BudgetingPage")" class="btn btn-primary btn-sm spacer-left-s">Edit</a>
                    </div>

                    <div class="max-width">
                        <div class="row spacer-bottom-m">
                            <div class="col-xs-6 col-sm-4">
                                Allocated budget
                            </div>
                            <div class="col-xs-6">
                                <strong>$20,000</strong>
                            </div>
                        </div>
                        <div class="row spacer-bottom-m">
                            <div class="col-xs-6 col-sm-4">
                                Spent budget
                            </div>
                            <div class="col-xs-6">
                                <strong>$5,000</strong>
                            </div>
                        </div>
                        <div class="row spacer-bottom-m">
                            <div class="col-xs-6 col-sm-4">
                                Remaining
                            </div>
                            <div class="col-xs-6">
                                <strong class="text-success">$15,000</strong>
                            </div>
                        </div>
                        <div class="row spacer-bottom-m">
                            <div class="col-xs-6 col-sm-4">
                                Start date
                            </div>
                            <div class="col-xs-6">
                                <strong>September 1st, 2016</strong>
                            </div>
                        </div>
                        <div class="row spacer-bottom-m">
                            <div class="col-xs-6 col-sm-4">
                                Due date
                            </div>
                            <div class="col-xs-6">
                                <strong>February 2nd, 2017</strong>
                            </div>
                        </div>
                        <div class="row spacer-bottom-m">
                            <div class="col-xs-6 col-sm-4">
                                Status
                            </div>
                            <div class="col-xs-6">
                                <strong>active</strong>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="spacer-bottom-l">
                    <div class="section-title spacer-bottom-m">
                        <h2 class="h3">Current suborganization budgets</h2>
                    </div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>name</th>
                                <th>allocated budget</th>
                                <th>spent budget</th>
                                <th>start date</th>
                                <th>end date</th>
                                <th>status</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><a href="#">Episerver Americares</a></td>
                                <td>$600,000</td>
                                <td>$200,000</td>
                                <td>September 1st, 2016</td>
                                <td>February 2nd, 2017</td>
                                <td>active</td>
                                <td class="text-center">
                                    <a href="#" class="btn btn-primary btn-xs spacer-left-s">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </section>
                <section class="spacer-bottom-l">
                    <div class="section-title spacer-bottom-m">
                        <h2 class="h3">Organization budget timeline</h2>
                        <a href="@Url.Action("AddBudget","BudgetingPage")" class="btn btn-primary btn-sm spacer-left-s">New budget</a>
                    </div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>name</th>
                                <th>allocated budget</th>
                                <th>spent budget</th>
                                <th>start date</th>
                                <th>end date</th>
                                <th>status</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><a href="#">Episerver Americares</a></td>
                                <td>$600,000</td>
                                <td>$200,000</td>
                                <td>September 1st, 2016</td>
                                <td>February 2nd, 2017</td>
                                <td>active</td>
                                <td class="text-center">
                                    <a href="#" class="btn btn-primary btn-xs spacer-left-s">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </section>
            </div>
        </main>
    </div>
</div>
