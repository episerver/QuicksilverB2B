@model EPiServer.Reference.Commerce.Site.Features.Users.ViewModels.UsersPageViewModel
<div class="container-fluid">
    <div class="row myPage">
        @Html.Partial("_CmsNavigation", Model.CurrentPage)
        <main class="col-xs-12 col-sm-9">
            <div class="spacer-left-l">
                @{ Html.RenderAction("Index", "B2BNavigation");}
                <section>
                    <div class="section-title spacer-bottom-m">
                        <a href="@Url.Action("AddUser","UsersPage")" class="btn btn-primary btn-sm">Add User</a>
                        <form class="pull-right" action="" method="get" role="search">
                            <div class="custom-search">
                                <input type="text" autocomplete="off" placeholder="search" />
                                <span class="icon-search glyphicon glyphicon-search" aria-hidden="true"></span>
                            </div>
                        </form>
                    </div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>name</th>
                                <th>address</th>
                                <th>role</th>
                                <th>organization</th>
                                <th class="text-right">actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td><a href="#">@user.FullName</a></td>
                                    <td>@user.Email</td>
                                    <td>@user.UserRole</td>
                                    <td>@user.Organization.Name</td>
                                <td class="text-right">
                                    <a href="#" class="btn btn-primary btn-xs" @(user.IsAdmin ? "disabled" : "")>
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                    <a href="#" class="btn btn-danger btn-xs" @(user.IsAdmin ? "disabled" : "")>
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                    <a href="#" class="btn btn-info btn-xs" @(user.IsAdmin ? "disabled" : "")>
                                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Impersonate
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </main>
    </div>
</div>
